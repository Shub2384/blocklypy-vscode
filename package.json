{
  "name": "blocklypy-vscode",
  "displayName": "BlocklyPy Commander for VSCode",
  "description": "Interact with LEGOÂ® Hubs running Pybricks firmware: compile and upload Python scripts, convert LEGO robotics files.",
  "version": "0.3.2",
  "engines": {
    "vscode": "^1.101.0"
  },
  "categories": [
    "Programming Languages",
    "Visualization",
    "Other"
  ],
  "keywords": [
    "pybricks",
    "blocklypy",
    "lego",
    "ev3",
    "spike",
    "spike prime",
    "mindstorms",
    "robotics",
    "micropython",
    "python",
    "visual programming",
    "first lego league",
    "fll",
    "education",
    "world robot olympiad",
    "wro"
  ],
  "publisher": "afarago",
  "sponsor": {
    "url": "https://www.github.com/sponsors/afarago",
    "label": "Sponsor"
  },
  "homepage": "https://attilafarago.hu",
  "repository": {
    "type": "git",
    "url": "https://github.com/afarago/blocklypy-vscode.git"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/afarago/blocklypy-vscode/issues"
  },
  "icon": "icon.png",
  "activationEvents": [
    "onStartupFinished",
    "onLanguage:python",
    "onLanguage:lego",
    "onWebviewPanel:blocklypy-vscode.blocklypyViewer",
    "onWebviewPanel:blocklypy-vscode.pythonPreview"
  ],
  "main": "./dist/extension.js",
  "packageManager": "yarn@1.22.19",
  "files": [
    "dist",
    "asset/",
    "screenshot/"
  ],
  "contributes": {
    "commands": [
      {
        "command": "blocklypy-vscode.connectDevice",
        "title": "BlocklyPy: Connect Device",
        "icon": {
          "light": "asset/hub-small-light.svg",
          "dark": "asset/hub-small-dark.svg"
        }
      },
      {
        "command": "blocklypy-vscode.disconnectDevice",
        "title": "BlocklyPy: Disconnect Device",
        "icon": "$(debug-disconnect)"
      },
      {
        "command": "blocklypy-vscode.compile",
        "title": "BlocklyPy: Compile",
        "icon": "$(compile)"
      },
      {
        "command": "blocklypy-vscode.compileAndRun",
        "title": "BlocklyPy: Compile and Run",
        "icon": "$(debug-start)"
      },
      {
        "command": "blocklypy-vscode.startUserProgram",
        "title": "BlocklyPy: Start User Program",
        "icon": "$(run)"
      },
      {
        "command": "blocklypy-vscode.stopUserProgram",
        "title": "BlocklyPy: Stop User Program",
        "icon": "$(debug-stop)"
      },
      {
        "command": "blocklypy-vscode.toggleAutoConnect",
        "title": "BlocklyPy: Toggle Auto-Connect",
        "icon": "$(plug)",
        "category": "blocklypy-vscode.Settings"
      },
      {
        "command": "blocklypy-vscode.toggleAutoStart",
        "title": "BlocklyPy: Toggle Auto-Start",
        "icon": "$(play)",
        "category": "blocklypy-vscode.Settings"
      },
      {
        "command": "blocklypy-vscode.toggleAutoClearTerminal",
        "title": "BlocklyPy: Toggle Auto-Clear Terminal",
        "icon": "$(clear-all)",
        "category": "blocklypy-vscode.Settings"
      },
      {
        "command": "blocklypy-vscode.statusPlaceholder",
        "title": "BlocklyPy: Status",
        "icon": "$(debug-stackframe)",
        "category": "blocklypy-vscode.Status"
      },
      {
        "command": "blocklypy-vscode.blocklypyViewer.displayNextView",
        "title": "BlocklyPy: Next view",
        "icon": "$(preview)"
      },
      {
        "command": "blocklypy-vscode.blocklypyViewer.displayPreviousView",
        "title": "BlocklyPy: Previous view",
        "icon": "$(preview)"
      },
      {
        "command": "blocklypy-vscode.blocklypyViewer.displayPycode",
        "title": "BlocklyPy: Show Python Code",
        "icon": {
          "light": "asset/display-py-light.svg",
          "dark": "asset/display-py-dark.svg"
        }
      },
      {
        "command": "blocklypy-vscode.blocklypyViewer.displayPseudo",
        "title": "BlocklyPy: Show Pseudo Code",
        "icon": {
          "light": "asset/display-pseudo-light.svg",
          "dark": "asset/display-pseudo-dark.svg"
        }
      },
      {
        "command": "blocklypy-vscode.blocklypyViewer.displayPreview",
        "title": "BlocklyPy: Show Preview",
        "icon": {
          "light": "asset/display-preview-light.svg",
          "dark": "asset/display-preview-dark.svg"
        }
      },
      {
        "command": "blocklypy-vscode.blocklypyViewer.displayGraph",
        "title": "BlocklyPy: Show Dependency Graph",
        "icon": {
          "light": "asset/display-graph-light.svg",
          "dark": "asset/display-graph-dark.svg"
        }
      },
      {
        "command": "blocklypy-vscode.showPythonPreview",
        "title": "Show Python Dependency Preview",
        "icon": {
          "light": "asset/display-graph-light.svg",
          "dark": "asset/display-graph-dark.svg"
        }
      },
      {
        "command": "blocklypy-vscode.pythonPreview.showSource",
        "title": "Show Python Source Code",
        "icon": "$(go-to-file)"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "blocklypy-vscode-activitybar",
          "title": "BlocklyPy Commander",
          "icon": "asset/icon.svg"
        }
      ]
    },
    "views": {
      "blocklypy-vscode-activitybar": [
        {
          "id": "blocklypy-vscode-commands",
          "name": "Commands",
          "icon": "asset/icon.svg",
          "initialSize": 20
        },
        {
          "id": "blocklypy-vscode-devices",
          "name": "Devices",
          "icon": "asset/icon.svg",
          "initialSize": 20
        },
        {
          "id": "blocklypy-vscode-settings",
          "name": "Settings",
          "icon": "asset/icon.svg",
          "initialSize": 10
        }
      ]
    },
    "keybindings": [
      {
        "command": "blocklypy-vscode.compileAndRun",
        "key": "f5",
        "when": "(editorLangId == python || activeCustomEditorId == blocklypy-vscode.blocklypyViewer) && blocklypy-vscode.isConnected"
      },
      {
        "command": "blocklypy-vscode.compile",
        "key": "ctrl+f5",
        "when": "(editorLangId == python || activeCustomEditorId == blocklypy-vscode.blocklypyViewer)"
      },
      {
        "command": "blocklypy-vscode.stopUserProgram",
        "key": "f6",
        "when": "blocklypy-vscode.isConnected && blocklypy-vscode.isProgramRunning"
      },
      {
        "command": "blocklypy-vscode.stopUserProgram",
        "key": "shift+f5",
        "when": "blocklypy-vscode.isConnected && blocklypy-vscode.isProgramRunning"
      },
      {
        "command": "blocklypy-vscode.blocklypyViewer.displayNextView",
        "key": "f7",
        "when": "activeCustomEditorId == blocklypy-vscode.blocklypyViewer"
      },
      {
        "command": "blocklypy-vscode.blocklypyViewer.displayPreviousView",
        "key": "shift+f7",
        "when": "activeCustomEditorId == blocklypy-vscode.blocklypyViewer"
      },
      {
        "command": "blocklypy-vscode.showPythonPreview",
        "key": "f7",
        "when": "editorLangId == python"
      },
      {
        "command": "blocklypy-vscode.pythonPreview.showSource",
        "key": "f7",
        "when": "activeCustomEditorId == blocklypy-vscode.pythonPreview"
      }
    ],
    "configuration": {
      "title": "BlocklyPy",
      "properties": {
        "blocklypy-vscode.lastConnectedDevice": {
          "type": "string",
          "default": "",
          "description": "The name of the last connected device."
        },
        "blocklypy-vscode.autoConnect": {
          "type": "boolean",
          "default": false,
          "description": "Automatically connect to the last connected device when opening a Python file."
        },
        "blocklypy-vscode.autoStart": {
          "type": "boolean",
          "default": false,
          "description": "Automatically start the user program after connecting to a device."
        },
        "blocklypy-vscode.autoClearTerminal": {
          "type": "boolean",
          "default": false,
          "description": "Automatically clear the terminal before compiling and running a program."
        }
      }
    },
    "menus": {
      "editor/title/run": [
        {
          "command": "blocklypy-vscode.compileAndRun",
          "group": "navigation",
          "when": "(editorLangId == python || activeCustomEditorId == blocklypy-vscode.blocklypyViewer) && !blocklypy-vscode.isProgramRunning && blocklypy-vscode.isConnected"
        },
        {
          "command": "blocklypy-vscode.stopUserProgram",
          "group": "navigation",
          "when": "(editorLangId == python || activeCustomEditorId == blocklypy-vscode.blocklypyViewer) && blocklypy-vscode.isProgramRunning && blocklypy-vscode.isConnected"
        }
      ],
      "editor/title": [
        {
          "command": "blocklypy-vscode.blocklypyViewer.displayPreview",
          "when": "activeCustomEditorId == blocklypy-vscode.blocklypyViewer && blocklypy-vscode.customViewType !== 'preview' && blocklypy-vscode.contentAvailability.hasPreview",
          "group": "navigation@2"
        },
        {
          "command": "blocklypy-vscode.blocklypyViewer.displayPseudo",
          "when": "activeCustomEditorId == blocklypy-vscode.blocklypyViewer && blocklypy-vscode.customViewType !== 'pseudo' && blocklypy-vscode.contentAvailability.hasPseudo",
          "group": "navigation@3"
        },
        {
          "command": "blocklypy-vscode.blocklypyViewer.displayPycode",
          "when": "activeCustomEditorId == blocklypy-vscode.blocklypyViewer && blocklypy-vscode.customViewType !== 'pycode' && blocklypy-vscode.contentAvailability.hasPycode",
          "group": "navigation@5"
        },
        {
          "command": "blocklypy-vscode.blocklypyViewer.displayGraph",
          "when": "activeCustomEditorId == blocklypy-vscode.blocklypyViewer && blocklypy-vscode.customViewType !== 'graph' && blocklypy-vscode.contentAvailability.hasGraph",
          "group": "navigation@6"
        },
        {
          "command": "blocklypy-vscode.blocklypyViewer.displayNextView",
          "when": "activeCustomEditorId == blocklypy-vscode.blocklypyViewer"
        },
        {
          "command": "blocklypy-vscode.blocklypyViewer.displayPreviousView",
          "when": "activeCustomEditorId == blocklypy-vscode.blocklypyViewer"
        },
        {
          "command": "blocklypy-vscode.showPythonPreview",
          "when": "editorLangId == python",
          "group": "navigation"
        },
        {
          "command": "blocklypy-vscode.pythonPreview.showSource",
          "when": "activeCustomEditorId == blocklypy-vscode.pythonPreview",
          "group": "navigation@1"
        }
      ]
    },
    "customEditors": [
      {
        "viewType": "blocklypy-vscode.blocklypyViewer",
        "displayName": "BlocklyPy Viewer",
        "icon": {
          "light": "asset/file-lego-light.svg",
          "dark": "asset/file-lego-dark.svg"
        },
        "selector": [
          {
            "filenamePattern": "*.{llsp3,llsp,lms,lmsp,ev3,ev3m,rbf,proj}"
          }
        ],
        "priority": "default"
      },
      {
        "viewType": "blocklypy-vscode.pythonPreview",
        "displayName": "Python Dependency Graph Preview",
        "priority": "option",
        "icon": {
          "light": "asset/display-graph-light.svg",
          "dark": "asset/display-graph-dark.svg"
        },
        "selector": [
          {
            "filenamePattern": "*.py"
          }
        ]
      }
    ],
    "languages": [
      {
        "id": "lego",
        "extensions": [
          ".llsp3",
          ".llsp",
          ".lmsp",
          ".lms",
          ".ev3",
          ".ev3m",
          ".rbf",
          ".proj"
        ],
        "aliases": [
          "LEGO",
          "lego"
        ],
        "icon": {
          "light": "asset/file-lego-light.svg",
          "dark": "asset/file-lego-dark.svg"
        }
      }
    ],
    "snippets": [
      {
        "language": "python",
        "path": "./snippets/spikehub1.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch --config-node-env development --devtool source-map",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "NODE_ENV=development tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test",
    "postinstall": "patch-package",
    "package-extension": "npx vsce package",
    "publish-extension": "npx vsce publish"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/lodash": "^4.17.20",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/resolve": "^1.20.6",
    "@types/vscode": "^1.101.0",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.2",
    "copy-webpack-plugin": "^13.0.1",
    "css-loader": "^7.1.2",
    "eslint": "^9.25.1",
    "jest": "^30.1.3",
    "monaco-editor": "^0.52.2",
    "monaco-editor-webpack-plugin": "^7.1.0",
    "patch-package": "^8.0.0",
    "style-loader": "^4.0.0",
    "ts-jest": "^29.4.1",
    "ts-loader": "^9.5.2",
    "typescript": "^5.8.3",
    "webpack": "^5.101.3",
    "webpack-cli": "^6.0.1"
  },
  "dependencies": {
    "@abandonware/noble": "^1.9.2-26",
    "@hpcc-js/wasm-graphviz": "^1.12.0",
    "@pybricks/mpy-cross-v6": "^2.0.0",
    "@pybricks/python-program-analysis": "^2.0.0",
    "blocklypy": "^0.1.9",
    "lodash": "^4.17.21",
    "resolve": "^1.22.10",
    "svg-pan-zoom": "^3.6.2"
  }
}
